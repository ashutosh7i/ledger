{
  "name": "uptut-assignment",
  "version": "1.0.0",
  "description": "Basic Ledger System - Double-entry bookkeeping backend with TypeScript",
  "license": "ISC",
  "author": "ashutosh7i",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec tsx src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec tsx src/server.ts",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "db:init": "tsx src/scripts/init-db.ts",
    "db:init:force": "tsx src/scripts/init-db.ts --force",
    "db:reset": "tsx src/scripts/reset-db.ts",
    "db:seed:scenario": "tsx src/scripts/seed-scenario.ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@tsconfig/node-lts": "^22.0.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mysql2": "^3.15.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
